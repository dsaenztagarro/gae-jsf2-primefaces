<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
version="2.0">
	<application>
   
    	<el-resolver>
    		org.springframework.web.jsf.el.SpringBeanFacesELResolver
    	</el-resolver>
    		
		<locale-config>
			<default-locale></default-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>es_ES</supported-locale>
		</locale-config>	
		
		<resource-bundle>
			<base-name>com.davlanca.billmanager.resources.messages</base-name>
			<var>msg</var>
		</resource-bundle>
	
	</application>
	
	<managed-bean>
		<managed-bean-name>billBean</managed-bean-name>
		<managed-bean-class>com.davlanca.billmanager.bean.BillBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>billService</property-name>
			<value>#{billService}</value>
		</managed-property>	
	</managed-bean>

	<managed-bean>
		<managed-bean-name>loginBean</managed-bean-name>
		<managed-bean-class>com.davlanca.billmanager.bean.LoginBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>userService</property-name>
			<value>#{userService}</value>
		</managed-property>
	</managed-bean>
	
	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{loginBean.checkLogin}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/pages/bill/bill_edit.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{loginBean.checkLogin}</from-action>  
			<from-outcome>error</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>